<div class="chat_menu">
  <h1>Chat rooms</h1>

  <p class="lead"><%= link_to 'New chat room', new_chat_room_path, class: 'btn btn-primary' %></p>

  <ul>
    <% @chat_list.each do |chat| %>
      <li><%= link_to chat[:title], "/chat_rooms/#{chat[:id]}"  %><%= chat[:unread_mess] %></li>
    <% end %>
  </ul>
</div>
